rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // User can access their own files under the /users path
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rule for user-specific receipt images under /receipts/{userId}/
    match /receipts/{userId}/{filename} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId &&
                          request.resource.size < 5 * 1024 * 1024 &&
                          request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rule for user-specific thumbnail images under /thumbnails/receipts/{userId}/
    match /thumbnails/receipts/{userId}/{filename} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
      // Write access for thumbnails is typically handled by the Cloud Function's service account,
      // so client-side write might not be needed or could be more restrictive.
    }
    
    // Shared receipt images (if used for a different purpose, e.g. public access after processing)
    // This rule might need review based on its intended use case now that the above rule is added.
    // If all receipt images are user-specific and follow /receipts/{userId}/{filename},
    // this rule might become redundant or need adjustment.
    match /receipts/{receiptId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                    request.resource.size < 5 * 1024 * 1024 && 
                    request.resource.contentType.matches('image/.*');
    }
    
    // Audio transcription files
    match /audio_transcriptions/{filename} {
      allow read, write: if request.auth != null && 
                          request.resource.size < 10 * 1024 * 1024 && 
                          (request.resource.contentType.matches('audio/.*') || 
                           request.resource.contentType.matches('application/octet-stream') ||
                           request.resource.contentType == 'audio/x-wav');
    }
  }
}