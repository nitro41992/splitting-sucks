rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // User can access their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Shared receipt images
    match /receipts/{receiptId} {
      // Get receipt document to check permissions
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                    request.resource.size < 5 * 1024 * 1024 && 
                    request.resource.contentType.matches('image/.*');
    }
    
    // Audio transcription files
    match /audio_transcriptions/{filename} {
      allow read, write: if request.auth != null && 
                          request.resource.size < 10 * 1024 * 1024 && 
                          (request.resource.contentType.matches('audio/.*') || 
                           request.resource.contentType.matches('application/octet-stream') ||
                           request.resource.contentType == 'audio/x-wav');
    }
  }
}